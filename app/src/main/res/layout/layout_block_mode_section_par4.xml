<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:paddingVertical="30dp">

        <!-- ShapeableImageView를 가로로 배치할 ConstraintLayout 사용 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- 첫 번째 ShapeableImageView -->
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_section_circle1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/shape_section_circle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/v_section_line1"
                android:layout_width="30dp"
                android:layout_height="2dp"
                android:background="@drawable/shape_section_line"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv_section_circle1"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_section_circle2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/shape_section_circle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/v_section_line1"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/v_section_line2"
                android:layout_width="30dp"
                android:layout_height="2dp"
                android:background="@drawable/shape_section_line"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv_section_circle2"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_section_circle3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/shape_section_circle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/v_section_line2"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tv_hole_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl_section"
            tools:text="1" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
